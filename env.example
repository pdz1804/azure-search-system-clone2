# ==================================================
# Azure AI Search Configuration
# ==================================================
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your-search-service-key

# ==================================================
# Cosmos DB Configuration
# ==================================================
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key
COSMOS_DB=blogs
COSMOS_ARTICLES=articles
COSMOS_USERS=users

# ==================================================
# Application Configuration
# ==================================================
APP_ID=your-app-id-here

# ==================================================
# OpenAI Configuration
# ==================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_VERSION=2024-12-01-preview

# ==================================================
# Azure OpenAI Configuration (for skillsets)
# ==================================================
AZURE_OPENAI_ENDPOINT=https://your-azure-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_MODELNAME=text-embedding-3-small
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# ==================================================
# Embeddings Configuration
# ==================================================
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
HF_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIM=1536

# ==================================================
# Search Scoring Weights (must sum to 1.0)
# ==================================================
WEIGHT_SEMANTIC=0.5
WEIGHT_BM25=0.3
WEIGHT_VECTOR=0.1
WEIGHT_BUSINESS=0.1

AUTHORS_WEIGHT_SEMANTIC=0.6
AUTHORS_WEIGHT_BM25=0.4
AUTHORS_WEIGHT_VECTOR=0.0
AUTHORS_WEIGHT_BUSINESS=0.0

# ==================================================
# Business Logic Configuration
# ==================================================
FRESHNESS_HALFLIFE_DAYS=250
FRESHNESS_WINDOW_DAYS=365
SCORE_THRESHOLD=0.0
ENABLE_SCORE_FILTERING=true

# ==================================================
# Azure Storage Configuration
# ==================================================
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=files
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key

# ==================================================
# Redis Configuration
# ==================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ==================================================
# Backend Configuration
# ==================================================
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
BASE_URL=http://localhost:8001
AI_SEARCH_BASE_URL=http://localhost:8000
COSMOS_DB_CONNECTION_STRING=your-cosmos-connection-string
COSMOS_DB_NAME=articlehub

# ==================================================
# Identity Configuration
# ==================================================
IDENTITY=your-identity-config

# ==================================================
# Feature Flags
# ==================================================
ENABLE_EMBEDDINGS=true
ENABLE_INDEXER_CACHE=false
DEBUG=true
